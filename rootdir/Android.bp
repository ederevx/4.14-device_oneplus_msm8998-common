prebuilt_etc {
    name: "init.target.displaymodes.rc",
    src: "etc/init.target.displaymodes.rc",
    sub_dir: "init/hw",
    vendor: true,
}

prebuilt_etc {
    name: "init.qcom.usb.rc",
    src: "etc/init.qcom.usb.rc",
